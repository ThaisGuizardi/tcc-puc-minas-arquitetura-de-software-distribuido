@using MenuFacile.Mvc.Models.Manager.ProductPrice

@model ProductPriceAddViewModel
@{
    ViewData["Title"] = "Adicionar Preço Produto";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form method="post" class="row g-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-md-3">
        <label>Produto</label>
        <select asp-for="IdProduct" asp-items="ViewBag.Products" class="form-control">
            <option>-- Selecionar --</option>
        </select>
        <span asp-validation-for="IdProduct" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label>Preço</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label>&nbsp;</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Active">
            <label class="form-check-label" for="Active">
                Ativo
            </label>
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Preço Válido De</label>
        <input type="date" asp-for="ValidFrom" class="form-control" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>
    <div class="form-group col-md-5">
        <label>Preço Válido Até</label>
        <input type="date" asp-for="ValidUntil" class="form-control" />
        <span asp-validation-for="ValidUntil" class="text-danger"></span>
    </div>
    <div class="row pt-3">
        <div class="form-group col-12">
            <button type="submit" name="submitButton" value="save" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-secondary">Cancelar</button>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}