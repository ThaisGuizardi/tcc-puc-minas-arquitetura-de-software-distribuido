@using MenuFacile.Mvc.Models.Manager.RestaurantUser

@model RestaurantUserAddViewModel
@{
    ViewData["Title"] = "Adicionar Usuário ao Restaurante";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form method="post" class="row g-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-md-3">
        <label>Restaurante</label>
        <select asp-for="IdRestaurant" asp-items="ViewBag.Restaurants" class="form-control">
            <option>-- Selecionar --</option>
        </select>
        <span asp-validation-for="IdRestaurant" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label>Usuário</label>
        <select asp-for="IdUser" asp-items="ViewBag.Users" class="form-control">
            <option>-- Selecionar --</option>
        </select>
        <span asp-validation-for="IdUser" class="text-danger"></span>
    </div>
    <div class="row pt-3">
        <div class="form-group col-12">
            <button type="submit" name="submitButton" value="save" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-secondary">Cancelar</button>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}