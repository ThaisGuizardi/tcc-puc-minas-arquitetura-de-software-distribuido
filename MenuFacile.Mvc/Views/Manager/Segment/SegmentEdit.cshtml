@using MenuFacile.Mvc.Models.Manager.Segment

@model SegmentEditViewModel
@{
    ViewData["Title"] = "Editar Segmento";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="IdSegment" class="form-form-check-input" />
            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Active">
                    <label class="form-check-label" for="active">
                        Ativo
                    </label>
                </div>
            </div>
            <br />
            <button type="submit" name="submitButton" value="save" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-secondary">Cancelar</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}