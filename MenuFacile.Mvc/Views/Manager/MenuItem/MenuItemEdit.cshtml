@using MenuFacile.Mvc.Models.Manager.MenuItem

@model MenuItemEditViewModel
@{
    ViewData["Title"] = "Editar Item no Cardápio";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form method="post" class="row g-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="IdMenuItem" class="form-form-check-input" />
    <div class="form-group col-md-4">
        <label>Cardápio</label>
        <select asp-for="IdMenu" asp-items="ViewBag.Menus" class="form-control">
            <option>-- Selecionar --</option>
        </select>
        <span asp-validation-for="IdMenu" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label>Produto</label>
        <select asp-for="IdProduct" asp-items="ViewBag.Products" class="form-control">
            <option>-- Selecionar --</option>
        </select>
        <span asp-validation-for="IdProduct" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label>&nbsp;</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Active">
            <label class="form-check-label" for="Active">
                Ativo
            </label>
        </div>
    </div>
    <div class="row pt-3">
        <div class="form-group col-12">
            <button type="submit" name="submitButton" value="save" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-secondary">Cancelar</button>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}